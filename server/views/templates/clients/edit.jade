extends ../../layouts/master
block content
  .container(style='padding-top: 75px;')
    .row 
      .col-md-12
        a.btn.btn-default.btn-sm(href='/clients/#{client._id}'): i.fa.fa-chevron-left

  .container
    .row
      .col-md-12
        h3= 'Edit ' + client.name
      .col-md-12
        form(method='post', action='/clients/#{client._id}')
          .form-group
            label(for='name') Name
            input#name.form-control(type='text', name='name', placeholder='Enter a full name', autofocus=true, value=client.name)
            
          .form-group
            label(for='location') Location
            input#location.form-control(type='text', name='location', placeholder='Enter location', value=client.location)
            
          .form-group
            label(for='age') Age
            input#age.form-control(type='number', name='age', placeholder='Ente client age', value=client.age)

          .form-group
            label(for='photo') Photo
            input#photo.form-control(type='url', name='photo', placeholder='http://', value=client.photo)
            
          .form-group
            .checkbox-gender
              label(for='gender') Gender: &nbsp;
              label.radio-inline
                input#male(type='radio', name='gender', value='male', checked=client.gender === 'male')
                span Male
              label.radio-inline
                input#female(type='radio', name='gender', value='female', checked=client.gender === 'female')
                span Female
            
          button.btn.btn-default(type='submit') Edit Client
